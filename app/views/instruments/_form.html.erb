
<%= simple_form_for(@instrument) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :model %>
    <%= f.input :description %>
    <%= f.input :brand, collection: Instrument::BRAND %>
    <%= f.input :condition, collection: Instrument::CONDITION %>
    <%= f.input :finish, collection: Instrument::FINISH %>
    <%= f.input :price %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
