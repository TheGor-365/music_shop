<div id="<%= dom_id instrument %>">
  <p>
    <strong>Brand:</strong>
    <%= instrument.brand %>
  </p>

  <p>
    <strong>Model:</strong>
    <%= instrument.model %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= instrument.description %>
  </p>

  <p>
    <strong>Finish:</strong>
    <%= instrument.finish %>
  </p>

  <div>    
    <% if instrument.condition? %>
      <p><strong>Condition</strong>: <%= instrument.condition %></p>
    <% end %>

    <p>
      <strong>Title</strong>: <%= link_to instrument.title, instrument.title %>
    </p>
    <p>
      <strong>Sold by</strong>: <%= link_to instrument.user.username, instrument.user.username %>
    </p>
    <p>
      <strong>Price</strong>: <%= number_to_currency(instrument.price) %>
    </p>
  </div>
  <%= link_to image_tag(instrument.image_url(:thumb)), instrument %>
  <br>
    <% if instrument_author(instrument) %>
      <div class="col col-1 p-3 mt-2 border border-secondary"> 
        <%= link_to 'Edit', edit_instrument_path(instrument) %><br>
        <%= link_to 'Delete', instrument, method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
</div>
